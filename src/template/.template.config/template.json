{
  "$schema": "http://json.schemastore.org/template",
  "author": "Nocco Giovanni Emanuele",
  "classifications": [
    "Web/ASP.NET"
  ],
  "name": "Genocs: .NET9 Microservice Template",
  "identity": "Genocs.Microservice.Template",
  "description": ".NET9 Clean Architecture Template built with Multitenancy Support.",
  "groupIdentity": "Genocs.Template",
  "shortName": "gnx-microservice",
  "tags": {
    "type": "solution",
    "language": "C#"
  },
  "sourceName": "Genocs.Microservice.Template",
  "preferNameDirectory": true,
  "symbols": {
    "genocs-components": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "full",
      "choices": [
        {
          "choice": "full",
          "description": "Setup the full set of functionalities"
        }
      ],
      "replaces": "genocs-components",
      "onlyIf": [
        {
          "after": "\"genocs-components\": \""
        }
      ]
    },
    "full": {
      "type": "computed",
      "value": "(genocs-components == \"full\")"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**",
        ".vs/**",
        "media/**"
      ],      
      "modifiers": [
        {
          "condition": "(full)",
          "exclude": []
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "./"
    }
  ],
  "postActions": [
    {
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}